# .env - Configuration for Multi-Agent LLM System

# === Basic Server Configuration ===
PORT=3001
BASE_URL=http://localhost:3001
DB_FILE=data.json
NODE_ENV=production
SESSION_SECRET=showtime123*
DEMO_RESET_ENABLED=true

FREE_LLM_PROVIDER=groq


# Options: 'real', 'mock', 'demonstration' 
LLM_MODE=real
GROQ_API_KEY=


# === Agent Configuration ===
# Enable/disable specific agents
ENABLE_KNOWLEDGE_AGENT=true
ENABLE_NOTIFICATION_AGENT=true
ENABLE_TICKET_AGENT=true

# Knowledge Agent specific settings
KNOWLEDGE_AGENT_MAX_RESULTS=10
KNOWLEDGE_AGENT_CONFIDENCE_THRESHOLD=0.7

# Notification Agent specific settings
NOTIFICATION_BATCH_SIZE=5
NOTIFICATION_DELAY_MS=2000
NOTIFICATION_MAX_RETRIES=3

# Ticket Agent specific settings
TICKET_BACKUP_ENABLED=true
TICKET_MAX_BULK_OPERATIONS=100

# === Rate Limiting ===
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=30

# === Security ===
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
ADMIN_PASSWORD=your_admin_password_here

# === Logging ===
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_CHAT_LOGGING=true

# === Cache Configuration ===
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_SECONDS=300
REDIS_URL=redis://localhost:6379

# === Development/Testing ===
MOCK_DELAY_MS=1000
ENABLE_DEBUG_MODE=true
ALLOW_CORS=true